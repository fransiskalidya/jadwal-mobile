<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainDaftarSidang">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainTitleCard"
        android:layout_width="464dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="310dp"
            android:src="@drawable/sidang1"/>

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="Form Pendaftaran Sidang Skripsi dan Sempro"
            android:textColor="@color/lightOrange"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subJudul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Jursan Teknologi Informasi"
            android:textStyle="bold"
            android:textColor="@color/lightOrange"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="85dp"
            android:textSize="5pt"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>

