<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainRegister">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainTitleCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="230dp"
            android:src="@drawable/design_new" />

        <TextView
            android:id="@+id/judulRegistrasi"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="290dp"
            android:text="P O L I N E M A "
            android:textColor="@color/Blue"
            android:textSize="15pt"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:backgroundTint="@color/Orange"
            android:src="@drawable/grad1" />

        <TextView
            android:id="@+id/registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="150dp"
            android:text="@string/judul2"
            android:textColor="@color/Blue"
            android:layout_marginRight="75dp"
            android:textSize="11pt"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle1Card"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginBottom="80dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky">


            <EditText
                android:id="@+id/edtnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Nama"
                android:inputType="text"
                android:textColor="@color/black"
                android:text=""
                android:textSize="6pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_login"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle2Card"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky">

            <EditText
                android:id="@+id/nim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="NIM"
                android:inputType="text"
                android:textColor="@color/black"
                android:text=""
                android:textSize="6pt" />

            <ImageView
                android:layout_marginRight="210dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nim"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle3Card"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky">

            <EditText
                android:id="@+id/prodi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Prodi"
                android:inputType="text"
                android:textColor="@color/black"
                android:text=""
                android:textSize="6pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/prodi"/>

            <ImageView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="400dp"
                android:src="@drawable/graduation2" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle4Card"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky">

            <EditText
                android:id="@+id/pswrd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:text=""
                android:textSize="6pt" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/login"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="140dp"
            android:textSize="15dp"
            android:text="@string/SignIn"
            android:onClick="moveToChangePassword"
            android:backgroundTint="@color/DeepPink"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            android:src="@drawable/graduation2"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>
