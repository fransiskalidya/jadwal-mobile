<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainUbahPassword">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainTitleCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/mahasiswa" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:src="@drawable/line1" />


        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle2Card"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky">

            <EditText
                android:id="@+id/pswrdLama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Password Lama"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/black"
                android:textSize="6pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle3Card"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            android:layout_marginTop="70dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky">

            <EditText
                android:id="@+id/pswrdBaru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Password Baru"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/black"
                android:textSize="6pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/reset1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle4Card"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            app:cardBackgroundColor="@color/BlueSky"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp">

            <EditText
                android:id="@+id/pswrdKonfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Konfirmasi Password"
                android:inputType="textPassword"
                android:text=""
                android:textColor="@color/black"
                android:textSize="6pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/confirm" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:src="@drawable/pswrd" />

        <Button
            android:id="@+id/login"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="280dp"
            android:backgroundTint="@color/darkOrange"
            android:gravity="center"
            android:text="@string/save"
            android:onClick="moveToProfile"
            android:textSize="15dp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>