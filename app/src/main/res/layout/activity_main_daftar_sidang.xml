<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainDaftarSidang">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainTitleCard"
        android:layout_width="464dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/lightOrange">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="250dp"
            android:src="@drawable/graduate"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="412dp"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:src="@drawable/background_dashboard" />

        <TextView
            android:id="@+id/subJudul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Jursan Teknologi Informasi"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="85dp"
            android:textSize="5pt"/>

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="Form Pendaftaran Sidang Skripsi dan Sempro"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle1Card"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/BlueSky"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="25dp">


            <EditText
                android:id="@+id/edtnama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Nama"
                android:inputType="text"
                android:text=""
                android:textColor="@color/black"
                android:textSize="6pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_login" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle2Card"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="25dp">

            <EditText
                android:id="@+id/nim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="NIM"
                android:inputType="text"
                android:textColor="@color/black"
                android:text=""
                android:textSize="6pt" />

            <ImageView
                android:layout_marginRight="240dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nim"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle3Card"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky"
            android:layout_marginTop="70dp"
            android:layout_marginRight="25dp">

            <EditText
                android:id="@+id/judul1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Judul"
                android:inputType="text"
                android:textColor="@color/black"
                android:text=""
                android:textSize="6pt" />

            <ImageView
                android:layout_marginRight="240dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/title"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mainTitle4Card"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/BlueSky"
            android:layout_marginTop="150dp"
            android:layout_marginRight="25dp">

            <EditText
                android:id="@+id/dosbing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_marginLeft="45dp"
                android:gravity="center"
                android:hint="Dosen Pembimbing"
                android:inputType="text"
                android:textColor="@color/black"
                android:text=""
                android:textSize="6pt" />

            <ImageView
                android:layout_marginRight="240dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/teacher"/>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/submit"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_marginTop="220dp"
            android:textSize="15dp"
            android:text="@string/submit"
            android:onClick="moveToDashboard"
            android:backgroundTint="@color/darkOrange"/>


    </androidx.cardview.widget.CardView>
</LinearLayout>